<script>
    function adjustLayout() {
        var windowWidth = window.innerWidth;
        if (windowWidth < 600) {
            // Adjustments for small screens
            document.querySelector('.image img').style.marginLeft = '10%';
            document.querySelector('.login').style.width = '80%';
            document.querySelector('.login').style.marginLeft = 'auto';
            document.querySelector('.login').style.marginRight = 'auto';
        } else {
            // Reset styles for larger screens
            document.querySelector('.image img').style.marginLeft = '100px';
            document.querySelector('.login').style.width = '400px';
            document.querySelector('.login').style.marginLeft = '200px';
            document.querySelector('.login').style.marginRight = 'auto';
        }
    }
    document.getElementById('signupLink').addEventListener('click', function() {
        document.getElementById('loginForm').style.display = 'none';
        document.getElementById('signupForm').style.display = 'block';
    });
    document.getElementById('loginLink').addEventListener('click', function() {
        document.getElementById('loginForm').style.display = 'block';
        document.getElementById('signupForm').style.display = 'none';
    });
    window.addEventListener('resize', function () {
        adjustLayout();
    });


    adjustLayout();
</script>
</html>
